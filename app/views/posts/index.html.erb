<%= form_tag posts_path, :method => 'get' do %>
  <%= text_field_tag :url, params[:url], placeholder: 'Url' %>
  <%= render "layouts/search", params: params %>
<% end %>

<h4><%= @posts.count %> Results</h4>
<h5><% @type_counts.each do |t| %>
<%= "#{t[0]}: #{t[1]}, " %>
<% end %>
</h5>

<table>
<% @posts.each do |post| %>
<tr>
    <td><%= link_to 'ğŸ”—', post.url, target: '_blank' %></td>
    <td><%= link_to post.updated, post_path(post), title: post.archive %></td>
    <td><%= post.node.archive['source'] %></td>
    <td><%= post.title ? post.title.truncate(40) : 'post' %></td>
    <td><%# post.score %></td>
</tr>

<% end %>
</table>