<%= tw_time(@post.date) %>

<table>
<% @post.links.each do |link| %>
<tr>
    <td><%= link_to 'â†–', link.url, target: '_blank' %></td>
    <td><%= tw_time link.post.updated || link.post.date %></td>
    <% if link.url %>
        <td><%= link_to 'CT', url_on_ct(link.url), target: "_blank" %></td>
        <td><%= link_to link.url.truncate(30), links_path(url: link.url) %></td>
    <% end %>
    <td><%= link_to link.post.title, link.post.url, target: "_blank" if link.post.title %></td>
    <td><%= link.post.score %></td>
</tr>
<% end %>
</table>
