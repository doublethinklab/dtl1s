<table>
<% @post.links.each do |link| %>
<tr>
    <td><%= tw_time link.post.updated || link.post.date %></td>
    <td><%# link_to link.post.node.name, link.post.node.url, target: "_blank" %></td>
    <% if link.url %>
    <td><%= link_to 'CT', url_on_ct(link.url), target: "_blank" %></td>
    <td><%= link_to link.url.truncate(30), link.url, target: "_blank" %></td>
    <% end %>
    <td><%= link_to link.post.title.truncate(10), link.post.url, target: "_blank" if link.post.title %></td>
</tr>
<% end %>
</table>
