<% params[:start_date] ||= Date.today %>
<% params[:end_date] ||= Date.today %>
<% title params.values[0..-2].join(' - ') %>
<% if params[:start_date] || params[:end_date] %>
<%= date_field_tag :start_date, params[:start_date] %> ~
<%= date_field_tag :end_date, params[:end_date] %>
<% else %>
<%= date_field_tag :start_date, params[:start_date], value: Date.today %> ~
<%= date_field_tag :end_date, params[:end_date], value: Date.today %>
<% end %>
<%= submit_tag "Search", :name => nil %>
<% if params[:description].present? || params[:url].present? || @domains || @nodes %>
<br><br> 
<%= button_tag(type: 'submit', :name => "start_date", value: params[:end_date].to_date-3.days) do %>
  3 days
<% end %>

<%= button_tag(type: 'submit', :name => "start_date", value: params[:end_date].to_date-7.days) do %>
  7 days
<% end %>

<%= button_tag(type: 'submit', :name => "start_date", value: params[:end_date].to_date-30.days) do %>
  30 days
<% end %>

<%= button_tag(type: 'submit', :name => "start_date", value: params[:end_date].to_date-90.days) do %>
  90 days
<% end %>

<%= button_tag(type: 'submit', :name => "start_date", value: params[:end_date].to_date-1.year) do %>
  1 year
<% end %>
 to 
<%= params[:end_date] %>
<% end %>

