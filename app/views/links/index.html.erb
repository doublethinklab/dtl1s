<%= form_tag links_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :url, params[:url] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<table>
<% @link_tops.each do |link| %>
<tr>
    <td><%= link_to link[1], posts_path(url: link[0]) %></td>
    <td><%= link_to link[0] %></td>
</tr>
<% end %>
</table>
<table>
<% @links.each do |link| %>
<tr>
    <td><%= link.post.updated || link.post.date %></td>
    <td><%# link_to link.post.node.name, link.post.node.url, target: "_blank" %></td>
    <td><%= link_to link.post.title, link.post.url, target: "_blank" %></td>
</tr>
<% end %>
</table>

