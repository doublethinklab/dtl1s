<%= form_tag domains_path, :method => 'get' do %>
  <%= render "layouts/search", params: params %>
<% end %>
<h4><%= @domains.sum(&:nodes_count) %> Results (Domains)</h4>

<table>
<% @domains.each do |domain| %>
<tr>
    <td><%= domain.created_at %></td>
    <td><%= domain.nodes_count %></td>
    <td><%= link_to domain.url, domain_path(domain) %></td>
</tr>
<% end %>
</table>